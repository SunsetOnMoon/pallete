<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.registration.RegistrationFragment"
    android:background="@drawable/registation_background">>

    <TextView
        android:id="@+id/txt_pallete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="80dp"
        android:text="Pallete"
        android:textColor="@color/white"
        android:textSize="64sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/img_pallete"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/icon_pallete"
        app:layout_constraintStart_toEndOf="@id/txt_pallete"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Login:"
        android:layout_marginStart="50dp"
        android:textStyle="bold"
        android:textColor="@color/text_green"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_pallete"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/te_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:paddingTop="0dp"
        android:layout_marginEnd="50dp"
        tools:text="Alex Candy"
        android:textStyle="bold"
        android:textSize="20sp"
        android:backgroundTint="@color/text_green"
        app:boxStrokeWidth="4dp"
        app:boxStrokeWidthFocused="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_name"/>

    <TextView
        android:id="@+id/txt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Password:"
        android:layout_marginStart="50dp"
        android:textStyle="bold"
        android:textColor="@color/text_green"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/te_name"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/te_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:inputType="textPassword"
        android:paddingTop="0dp"
        android:layout_marginEnd="50dp"
        tools:text="Password"
        android:textStyle="bold"
        android:textSize="20sp"
        android:backgroundTint="@color/text_green"
        app:boxStrokeWidth="4dp"
        app:boxStrokeWidthFocused="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_password"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/text_green"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="15dp"
        android:text="Registration"
        android:textAllCaps="false"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@id/btn_signin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_signin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/text_green"
        android:text="Sign in"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="15dp"
        android:textAllCaps="false"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_exit"
        app:layout_constraintWidth="0.4"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_exit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/text_green"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:text="Exit"
        android:textAllCaps="false"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_signin"
        app:layout_constraintWidth="0.4"/>
</androidx.constraintlayout.widget.ConstraintLayout>